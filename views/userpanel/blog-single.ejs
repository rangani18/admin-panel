<%- include('user_header') %>

				<section class="page-heading wow fadeIn" data-wow-duration="1.5s" style="background-image: url(files/images/01-heading.jpg)">
					<div class="container">
						<div class="page-name">
							<h1>Single Post</h1>
							<span>Lovely layout of heading</span>
						</div>
					</div>
				</section>
				
				<section class="blog-single">
					<div class="container">
						<div class="row">
							<div class="col-md-8">
								<div class="blog-single-item">
									<img src="<%= singledata.blog_image %>" alt="">
									<div class="blog-single-content">	
										<h3><a href="#"><%= singledata.title %></a></h3>
										<span><a href="#"><%= singledata.username %></a> / <a href="#"><%= singledata.created_date %></a> / <a href="#"><%= singledata.catagory %></a></span>
										<p><%= singledata.description %></p>
										<div class="share-post">
											<span>Share on: <a href="#">facebook</a>, <a href="#">twitter</a>, <a href="#">linkedin</a>, <a href="#">instagram</a></span>
										</div>
									</div>
									<% var next = nextpage;
									   var prev = nextpage %>


									<% if(AllIds[--prev]) { %>
									<div class="prev-btn col-md-6 col-sm-6 col-xs-6">
										<a href="/blogsingle/<%= AllIds[prev] %>"><i class="fa fa-angle-left"></i>Previous</a>
									</div>
									<% } %>


									<% if(AllIds[++next]) { %>
									<div class="next-btn col-md-6 col-sm-6 col-xs-6">
										<a href="/blogsingle/<%= AllIds[next] %>">Next<i class="fa fa-angle-right"></i></a>
									</div>
									<% } %>	


								</div>
								<div class="blog-comments">
									<h2><%= cp.length %> Comments</h2>
									<ul class="coments-content">
										<% for(var ob of cp) { %>
										<li class="first-comment-item">
											<img src="<%= ob.commentimage %>" alt="">
											<span class="author-title"><a href="#"><%= ob.name %></a></span>
											<span class="comment-date"><%= ob.created_date %><a href="#">Reply</a>
											</span>
											<p><%= ob.message %></p>
										</li>
										<% } %>
										
										
									</ul>
								</div>
								<div class="submit-comment col-sm-12">
									<h2>Leave A Comment</h2>
									<form id="contact_form" action="/addcomment" method="POST" enctype="multipart/form-data">
										<input type="text" value="<%= postId %>" name="postId">
										<div class=" col-md-4 col-sm-4 col-xs-6">
											<input type="text" class="blog-search-field" name="name" placeholder="Your name...">
										</div>
										<div class="col-md-4 col-sm-4 col-xs-6">
											<input type="text" class="blog-search-field" name="email" placeholder="Your email...">
										</div>
										<div class="col-md-4 col-sm-4 col-xs-12">
											<input type="file" class="subject" name="commentimage">
										</div>
										<div class="col-md-12 col-sm-12">
											<textarea id="message" class="input" name="message" placeholder="Comment..."></textarea>
										</div>
										<div class="submit-coment col-md-12">
											<div class="btn-black">
												<input type="submit" value="submit now">
											</div>
										</div>
									</form>		
								</div>
							</div>
							<div class="col-md-4">
								<div class="widget-item">
									<h2>Search here</h2>
									<div class="dec-line"></div>
									<form method="get" id="blog-search" class="blog-search">
										<input type="text" class="blog-search-field" name="s" placeholder="Type keyword..." value="">
									</form>
								</div>
								<div class="widget-item">
									<h2>About Us</h2>
									<div class="dec-line">	
									</div>
									<p>Lorem ipsum dolor sit amet, consectetur adipisicing elit. Similique earum quod iste, natus quaerat facere a rem dolor sit amet, et placeat nemo.</p>
									<div class="social-icons">
										<ul>
											<li><a href="#"><i class="fa fa-facebook"></i></a></li>
											<li><a href="#"><i class="fa fa-twitter"></i></a></li>
											<li><a href="#"><i class="fa fa-google-plus"></i></a></li>
											<li><a href="#"><i class="fa fa-instagram"></i></a></li>
											<li><a href="#"><i class="fa fa-rss"></i></a></li>
										</ul>
									</div>
								</div>
								<div class="widget-item">
									<h2>Recent Posts</h2>
									<div class="dec-line"></div>
									<ul class="recent-item">
										<% for(var rp of recentPost) { %>
										<li class="recent-post-item">
											<a href="#">
												<img src="<%= rp.blog_image %>" alt="" height="30px">
												<span class="post-title"><%= rp.username %></span>
											</a>
											<span class="post-info"><%= rp.created_date %></span>
										</li>
										<% } %>
									</ul>
								</div>
								<div class="widget-item">
									<h2>From Flickr</h2>
									<div class="dec-line"></div>
									<div class="flickr-feed">
							        	<ul class="flickr-images">
							        	</ul>
							        </div>
								</div>
							</div>
						</div>
					</div>	
				</section>
				<%- include('user_footer') %>
